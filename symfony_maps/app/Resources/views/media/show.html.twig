{% extends 'base.html.twig' %}

{% block body %}
    <h1>Media</h1>

    <table>
        <tbody>
            <tr>
                <th>Titre</th>
                <td>{{ media.titre }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td><img src="{{ asset('uploads/')~ media.image }}"/>

            </tr>
            <tr>
                <th>Video</th>
                <td>{{ media.video }}</td>
            </tr>
            <tr>
                <th>Articleid</th>
                <td>{{ media.articleid }}</td>
            </tr>
            <tr>
                <th>Id</th>
                <td>{{ media.id }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('media_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('media_edit', { 'id': media.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
