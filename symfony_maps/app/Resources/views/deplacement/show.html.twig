{% extends 'base.html.twig' %}

{% block body %}
    <h1>Deplacement</h1>

    <table>
        <tbody>
            <tr>
                <th>Date</th>
                <td>{% if deplacement.date %}{{ deplacement.date|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Villedepart</th>
                <td>{{ deplacement.villedepart }}</td>
            </tr>
            <tr>
                <th>Villearrivee</th>
                <td>{{ deplacement.villearrivee }}</td>
            </tr>
            <tr>
                <th>Id</th>
                <td>{{ deplacement.id }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('deplacement_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('deplacement_edit', { 'id': deplacement.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
